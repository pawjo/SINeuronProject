<UserControl x:Class="SINeuronWPFApp.UserControls.ErrorChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SINeuronWPFApp.UserControls"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Name="MainGrid">
        <Label Name="ErrorLabel" Content="{Binding ErrorMessage}"/>
        <lvc:CartesianChart Series="{Binding SeriesCollection}" Height="200">
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="Błąd" LabelFormatter="{Binding YFormatter}" MinValue="0"/>
            </lvc:CartesianChart.AxisY>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Epoka" Labels="{Binding Labels}" Unit="1"/>
            </lvc:CartesianChart.AxisX>
        </lvc:CartesianChart>
    </Grid>
</UserControl>
